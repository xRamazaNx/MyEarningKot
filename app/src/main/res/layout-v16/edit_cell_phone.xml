<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titlePhoneEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/centDark"
        android:paddingStart="24dp"
        android:paddingTop="16dp"
        android:paddingEnd="24dp"
        android:paddingBottom="16dp"
        android:text="Управление контактом"
        android:textColor="@color/gray_1"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/phonePickButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="?android:attr/selectableItemBackground"
        android:drawableStart="@drawable/ic_contact"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingTop="20dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="@string/change_phone"
        android:textColor="@color/light_gray"
        android:textColorHint="@color/color_normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:text="@string/first_name"
        android:textColor="@color/color_normal"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:hint="@string/set_first_name"
        android:textColor="@color/light_gray"
        android:textColorHint="@color/color_normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:text="@string/last_name"
        android:textColor="@color/color_normal"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/editFamily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:hint="@string/set_last_name"
        android:textColor="@color/light_gray"
        android:textColorHint="@color/color_normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:text="@string/phone"
        android:textColor="@color/color_normal"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:hint="@string/set_phone"
            android:inputType="number|phone"
            android:textColor="@color/light_gray"
            android:textColorHint="@color/color_normal" />

        <ImageView
            android:id="@+id/phoneCallButton"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/editPhone"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="12dp"
            android:tint="@color/blue"
            app:srcCompat="@drawable/ic_phone_white" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:text="@string/organization"
        android:textColor="@color/color_normal"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/editOrganization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:hint="@string/set_organization_name"
        android:textColor="@color/light_gray"
        android:textColorHint="@color/color_normal" />


</LinearLayout>