<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/cent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:background="?android:attr/selectableItemBackground"
        android:layout_gravity="center"
        android:drawableEnd="@drawable/ic_contact"
        android:text="@string/change_phone"
        android:textColorHint="@color/color_normal"
        android:textColor="@color/light_gray"
        android:id="@+id/phonePickButton"
        android:padding="16dp"
        android:drawablePadding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:textColorHint="@color/color_normal"
        android:textColor="@color/light_gray"
        android:id="@+id/editName"
        android:hint="@string/set_first_name"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:textColorHint="@color/color_normal"
        android:textColor="@color/light_gray"
        android:id="@+id/editFamily"
        android:hint="@string/set_last_name"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:textColorHint="@color/color_normal"
        android:textColor="@color/light_gray"
        android:inputType="phone"
        android:id="@+id/editPhone"
        android:hint="@string/set_phone"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:textColorHint="@color/color_normal"
        android:textColor="@color/light_gray"
        android:id="@+id/editOrganization"
        android:hint="@string/set_organization_name"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>