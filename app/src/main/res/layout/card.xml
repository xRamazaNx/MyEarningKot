<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="3dp"
    android:layout_marginEnd="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/backgraund_for_card"
    android:orientation="vertical"
    android:paddingTop="4dp">

    <TextView
        android:padding="8dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/nameCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="у напарника на работе" />

    <FrameLayout
        android:id="@+id/divide_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/gradient"
        />

    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/datePeriodCard"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:gravity="center"
        android:padding="4dp"
        android:textColor="@color/color_date_arhive_card"
        android:textSize="14sp"
        tools:text="4 октября  -  4 ноября" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="6dp">

        <TextView
            android:id="@+id/sumTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/EARNING"
            android:textColor="@color/color_title_column"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/avansTitle"
            android:padding="4dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:gravity="center"
            android:text="@string/cash_advance"
            android:textColor="@color/color_title_column"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/balanceTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/THE_REST"
            android:textColor="@color/color_title_column"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_polosa_razdelitel"
        >

    </FrameLayout>

    <LinearLayout
        android:id="@+id/generalInfoContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/cent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sum"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1.1"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textColor="@color/color_sum"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:background="@color/color_polosa_razdelitel"
            android:orientation="horizontal"></LinearLayout>

        <TextView
            android:id="@+id/avans"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textColor="@color/color_avans"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:background="@color/color_polosa_razdelitel"
            android:orientation="horizontal"></LinearLayout>

        <TextView
            android:id="@+id/balance"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1.1"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textColor="@color/color_balance"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>