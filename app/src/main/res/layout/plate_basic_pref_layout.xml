    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/color_background_info_card"
        android:visibility="visible">

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            app:srcCompat="@drawable/ic_horizontal_scroll" />

        <Switch
            android:id="@+id/switchEnableHorizontalScroll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:checked="false"


            android:clickable="true"
            android:focusable="true"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:showText="false"
            android:text="@string/enable_horizontal_scroll"
            android:textAllCaps="false"
            android:textColor="@color/light_gray"
            android:textIsSelectable="false"
            android:textSize="14sp" />
    </LinearLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/color_background_info_card"
        android:visibility="visible">

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            app:srcCompat="@drawable/ic_show_total_info" />

        <Switch
            android:id="@+id/switchShowTotalInfo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:checked="true"
            android:clickable="true"
            android:drawableBottom="@color/color_normal"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="@string/show_total_info"
            android:textColor="@color/light_gray"
            android:textIsSelectable="false"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>