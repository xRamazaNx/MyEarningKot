<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/create_card_1_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cent"
    android:orientation="vertical"
    android:visibility="visible">

    <include layout="@layout/set_name_layout" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:text="@string/sample_of_card"
        android:textColor="@color/gray"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <TextView
            android:id="@+id/textViewSample"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:drawableStart="@drawable/ic_sample"
            android:drawableEnd="@drawable/ic_drop_down"
            android:drawablePadding="16dp"
            android:focusable="true"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="@string/sample_of_card"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/editSampleButton"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_setting_edit"
            />
    </LinearLayout>


</LinearLayout>
