<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/id_schet_1_dey_date"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="5dp"
              android:layout_marginLeft="5dp"
              android:layout_marginTop="2dp"
              android:layout_marginEnd="5dp"
              android:layout_marginRight="5dp"
              android:layout_marginBottom="2dp"
              android:background="@color/cent"
              android:gravity="center_vertical"
              android:orientation="horizontal"
    >


    <TextView
        android:id="@+id/id_summa_today"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.1"
        android:gravity="center"
        android:textAlignment="gravity"
        android:textColor="@color/color_sum"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/id_avans_today"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textAlignment="gravity"
        android:textColor="@color/color_avans"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/id_ostatok_today"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.1"
        android:gravity="center"
        android:textAlignment="gravity"
        android:textColor="@color/color_balance"
        android:textSize="14sp"
        />

</LinearLayout>